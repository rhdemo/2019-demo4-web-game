{
  "name": "summit-demo-4",
  "version": "0.0.0",
  "private": true,
  "description": "Summit 2019 - Demo 4 with streaming device motion and orientation",
  "author": "Evan Shortiss <eshortis@redhat.com>",
  "license": "MIT",
  "main": "public/index.html",
  "scripts": {
    "clean": "rm -rf dist .cache",
    "format": "prettier --single-quote --single-quote --write src/**/*.ts src/**/*.tsx",
    "nodeshift:development": "nodeshift --expose --strictSSL=false --build.env YARN_ENABLED=true",
    "nodeshift:production": "nodeshift --expose --build.env YARN_ENABLED=true",
    "start": "node server/index.js",
    "start:server": "node server/index.js | pino-pretty",
    "start:parcel": "parcel watch public/index.html public/admin.html",
    "start:dev": "yarn build:dev && env NODE_ENV=development run-p -l start:parcel start:server",
    "prebuild": "yarn lint && yarn clean",
    "build": "env NODE_ENV=production parcel build --detailed-report --public-url ./ ./public/index.html",
    "build:dev": "env NODE_ENV=development parcel build public/index.html",
    "lint": "tslint --format stylish --fix --project tsconfig.json",
    "pretest": "yarn lint",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run format && yarn run lint"
    }
  },
  "dependencies": {
    "env-var": "^3.4.2",
    "fastify": "^1.14.1",
    "fastify-static": "^1.1.0",
    "ip": "^1.1.5",
    "webmo": "^0.2.0",
    "ws": "^6.1.3"
  },
  "devDependencies": {
    "@types/jest": "^23.3.0",
    "@types/node": "^10.9.4",
    "@types/ws": "^6.0.1",
    "autoprefixer": "^9.0.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-preact": "^1.1.0",
    "dotenv": "^6.2.0",
    "events": "^3.0.0",
    "gyronorm": "evanshortiss/gyronorm.js#types",
    "husky": "^1.3.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.4.1",
    "linkstate": "^1.1.1",
    "node-sass": "^4.9.2",
    "nodeshift": "^2.1.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.9.7",
    "parcel-plugin-typescript": "^1.0.0",
    "pino-pretty": "^2.5.0",
    "preact": "^8.3.1",
    "run-p": "^0.0.0",
    "sockette": "^2.0.5",
    "strict-event-emitter-types": "^2.0.0",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "tslint-config-standard-plus": "^2.1.1",
    "typescript": "^3.3.3",
    "unistore": "^3.1.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/test/**.spec.+(ts|tsx|js)"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass|svg|png|jpg|jpeg|ttf|woff|woff2)$": "identity-obj-proxy",
      "^@app/(.*)$": "<rootDir>/src/$1",
      "^@components/(.*)$": "<rootDir>/src/components/$1",
      "^@styles/(.*)$": "<rootDir>/src/styles/$1",
      "^@public/(.*)$": "<rootDir>/public/$1",
      "^@assets/(.*)$": "<rootDir>/public/assets/$1"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
